<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvFacultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDeanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dean Name"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvStudentCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students: 0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCourseCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Courses: 0"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnViewStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Students in this Faculty"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnViewCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Courses in this Faculty"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>